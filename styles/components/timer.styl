.bdsft-client
  .timer
    position absolute
    top 3px
    left 0px
    width 100%
    text-align center
    font-family arial
    font-size 16px
    top 11px
    color white
  .text
    text-align center
  @css {
    .timer {
      color: <%= timerColor %>;
    }
  }

  .view-audioOnly
    .timer
      position relative
      margin-right 10px

  .enable-timer.started .timer
    {fadeIn}

  .client:not(.started) .timer
    {fadeOut}
